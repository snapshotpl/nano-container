{
    "name": "snapshotpl/nano-container",
    "description": "Minimalistic interop container",
    "type": "library",
    "license": "BSD 3-Clause",
    "authors": [
        {
            "name": "Witold Wasiczko",
            "email": "witold@wasiczko.pl"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",
        "container-interop/container-interop": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.7"
    },
    "autoload": {
        "psr-4": {
            "Snapshotpl\\NanoContainer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Snapshotpl\\NanoContainer\\Test\\": "test/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "coverage-html": "phpunit --coverage-html coverage"
    }
}
